<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="245dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/list_item_background_name">


    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:paddingBottom="1dp"
        android:textColor="@color/background_color"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/list_item_id"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlSymmetry,SpUsage"
        tools:text="@string/زهران" />

    <TextView
        android:id="@+id/list_item_id"
        android:layout_width="45dp"
        android:layout_height="0dp"
        android:background="@drawable/list_item_background_id"
        android:gravity="center"
        android:textColor="@color/background_color"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_name"
        tools:ignore="SpUsage"
        tools:text="10" />

</androidx.constraintlayout.widget.ConstraintLayout>